---
import { SEO } from "astro-seo";
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			title="Uwords learn without many words"
			description="Uwords - application for learning English based on your vocabulary"
			extend={{
				link: [{ rel: "icon", href: "/uwords.svg" }],
			}}
		/>
		<meta charset="UTF-8" />
		<meta name="description" content="Uwords - application for learning English based on your vocabulary" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/uwords.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Uwords learn without many words</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	* {
		padding: 0;
		margin: 0;
	}
</style>
